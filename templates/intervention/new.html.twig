{% extends 'base.html.twig' %}

{% block title %}Nouvelle Intervention{% endblock %}

{% block body %}
<div class="container mt-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_intervention_index') }}">Interventions</a></li>
            <li class="breadcrumb-item active" aria-current="page">Nouvelle intervention</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-success bg-gradient text-white">
                    <h1 class="h3 mb-0">
                        <i class="bi bi-plus-circle me-2"></i>Créer une nouvelle intervention
                    </h1>
                </div>
                
                <div class="card-body">
                    {{ include('intervention/_form.html.twig', {
                        'button_label': 'Créer l\'intervention',
                        'button_class': 'btn-success'
                    }) }}
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_intervention_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Types d'interventions</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item border-0 ps-0 pe-0">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Curative</h6>
                                <span class="badge bg-danger">Urgente</span>
                            </div>
                            <small class="text-muted">Résolution d'un problème existant</small>
                        </div>
                        <div class="list-group-item border-0 ps-0 pe-0">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Préventive</h6>
                                <span class="badge bg-success">Planifiée</span>
                            </div>
                            <small class="text-muted">Maintenance pour prévenir les problèmes</small>
                        </div>
                        <div class="list-group-item border-0 ps-0 pe-0">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Contractuelle</h6>
                                <span class="badge bg-info">Périodique</span>
                            </div>
                            <small class="text-muted">Définie par un contrat de service</small>
                        </div>
                        <div class="list-group-item border-0 ps-0 pe-0">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Quotidienne</h6>
                                <span class="badge bg-warning">Routine</span>
                            </div>
                            <small class="text-muted">Tâches récurrentes journalières</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}